<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/matchCardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Sample Match Card (Can be added dynamically via Java/Kotlin) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp"
            card_view:cardBackgroundColor="#1E88E5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="match 1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"/>
                <!-- Match Title -->
                <TextView
                    android:id="@+id/textMatchTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team A vs Team B"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Start Button -->
                <Button
                    android:id="@+id/buttonStartMatch"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Start"
                    android:textSize="14sp"
                    android:textColor="#1E88E5"
                    android:backgroundTint="#FFFFFF"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp"
            card_view:cardBackgroundColor="#1E88E5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Match Title -->
                <TextView
                    android:id="@+id/textMatchTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team A vs Team B"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Start Button -->
                <Button
                    android:id="@+id/buttonStartMatch2"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="Start"
                    android:textSize="14sp"
                    android:textColor="#1E88E5"
                    android:backgroundTint="#FFFFFF"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>
